<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="400dp"
        android:layout_width="match_parent"
        android:id="@+id/native_ad_view"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:id="@+id/background"
    >

        <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/ad_media"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />
        <ImageView
                android:id="@+id/ad_app_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.15"
                android:layout_marginStart="10dp"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintDimensionRatio="1:1"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/content"
                app:layout_constraintBottom_toTopOf="@+id/ad_call_to_action"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintStart_toEndOf="@id/ad_app_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ad_media"
        >
            <TextView
                    android:id="@+id/ad_headline"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:lines="1"
                    android:text="PUBG: Player Unknownâ€™s Battleground"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/ad_notification_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"

            ></TextView>
            <TextView
                    android:background="@color/blue"
                    android:layout_width="25dp"
                    android:gravity="center"
                    android:id="@+id/ad_notification_view"
                    android:layout_height="20dp"
                    android:text="Ad"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="10sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ad_headline"

            >
            </TextView>
            <RatingBar
                    android:id="@+id/ad_stars"
                    style="?android:attr/ratingBarStyleSmall"
                    android:progressTint="@color/blue"
                    android:progressBackgroundTint="@color/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:layout_marginTop="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ad_headline"
                    app:layout_constraintStart_toEndOf="@+id/ad_advertiser"/>
            <!--<RatingBar
                    android:id="@+id/ad_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="12sp"
                    android:textColor="@color/gnt_gray"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:lines="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ad_headline"
            >

            </RatingBar>-->
            <TextView
                    android:id="@+id/ad_advertiser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:lines="1"
                    android:paddingRight="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ad_headline"
                    app:layout_constraintStart_toStartOf="parent"
            ></TextView>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_height="0dp"
                android:id="@+id/ad_body"
                android:textSize="12sp"

                android:textColor="@color/grey_400"
                android:text="PLAYERUNKNOWN'S BATTLEGROUNDS goes mobile - the original Battle Royale game"
                app:layout_constraintStart_toStartOf="@id/content"
                app:layout_constraintEnd_toEndOf="@id/content"
                app:layout_constraintTop_toBottomOf="@id/content"
                app:layout_constraintBottom_toTopOf="@+id/ad_call_to_action"/>


        <com.google.android.material.button.MaterialButton
                android:id="@+id/ad_call_to_action"
                android:layout_width="0dp"
                android:layout_height="60dp"
                app:cornerRadius="4dp"
                app:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:lines="1"
                android:text="INSTALL"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_margin="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.gms.ads.nativead.NativeAdView>

